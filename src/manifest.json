{
	"manifest_version" : 3,
	"name" : "...",
	"short_name" : "...",
	"version" : "1.0",
	"author" : "...",
	"description" : "...",
	
	"icons" : {
		"16" : "icons/16x16.png",
		"32" : "icons/32x32.png",
		"48" : "icons/48x48.png",
		"64" : "icons/64x64.png",
		"128" : "icons/128x128.png"
	},
	
	"content_scripts": [
		{
			"all_frames": true,
			"matches": ["*://*/*"],
			"js": ["content.js"],
            "css": ["content.css"],
			"run_at": "document_end"
		}	
	],
    
    "permissions": [
        "storage",
        "tabs",
        "activeTab"
    ],

	"background" : {
		"service_worker" : "background.js"
	},
	
    "action": {
        "default_title": "...",
        "default_icon": "icons/48x48.png",
		"default_popup": "popup/popup.html"
    }
}


